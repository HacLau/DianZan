<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mine.mishi.mishi.activity.SettingNameActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/theme_title_bg"/>
    <com.mine.mishi.mishi.view.TitleBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tbText="设置昵称"
        app:tbLeftText="取消"
        app:tbRightText="完成"
        />

    <TextView
        android:id="@+id/desc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="15dp"
        android:text="2-24个字符，一个自然月只能申请修改一次"
        android:background="@color/theme_interface_bg"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:padding="15dp"
        android:background="@color/text_color_white"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_interface_bg"/>

</LinearLayout>
