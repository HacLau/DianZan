<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data></data>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/theme_interface_bg"
            tools:context="com.mine.mishi.mishi.activity.GoodsDetailActivity">
            <View
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/theme_title_bg"/>

            <com.mine.mishi.mishi.view.TitleBar
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tbText="标题"
                app:tbImage="@mipmap/ico_back_king"
                app:tbTextColor="@color/theme_text_color"
                app:tbRightImage="@mipmap/shared_king"
                />
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/text_color_white"
                android:padding="15dp">
                <TextView
                    android:id="@+id/detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="标题"/>
                <TextView
                    android:id="@+id/detail_using"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="标题"/>
                <TextView
                    android:id="@+id/detail_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="价格"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:padding="15dp"
                android:layout_marginTop="5dp"
                android:background="@color/text_color_white">
                <ImageView
                    android:id="@+id/shop_head"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/ic_launcher"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/shop_head"
                    android:layout_toLeftOf="@+id/btn_care"
                    android:layout_toRightOf="@+id/shop_head"
                    android:layout_toStartOf="@+id/btn_care"
                    android:text="用户名"
                    android:id="@+id/shop_name" />

                <TextView
                    android:id="@+id/shop_fans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/shop_head"
                    android:layout_alignBottom="@id/shop_head"
                    android:layout_toStartOf="@+id/btn_care"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:text="哈哈" />
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/next"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_care"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="1dp"
                android:background="@color/text_color_white"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/map"/>
                <TextView
                    android:id="@+id/shop_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/shop_phone"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/phone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_marginTop="1dp"
                android:background="@color/text_color_white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="菜单"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/theme_interface_bg"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="烧烤套餐"
                    android:gravity="center"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_marginTop="1dp"
                android:background="@color/text_color_white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="购买须知"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/theme_interface_bg"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/theme_interface_bg"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="购买须知"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_marginTop="1dp"
                android:background="@color/text_color_white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="更多笔记"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/theme_interface_bg"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/more_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>



            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</layout>