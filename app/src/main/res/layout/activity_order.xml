<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mine.mishi.mishi.activity.OrderActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/theme_title_bg"/>
    <com.mine.mishi.mishi.view.TitleBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tbText="订单中心"
        app:tbImage="@mipmap/ico_back_white"
        app:tbTextColor="@color/theme_text_color"
        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ffffffff"
        >
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@android:color/holo_blue_dark"
            app:tabTextColor="@android:color/black"
            app:tabBackground="@android:color/white"
            app:tabSelectedTextColor="@android:color/holo_red_dark"/>
    </android.support.v7.widget.CardView>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
