<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mine.mishi.mishi.activity.SettingMobileActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/theme_title_bg"/>
    <com.mine.mishi.mishi.view.TitleBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tbText="修改手机号"
        app:tbImage="@mipmap/ico_back_white"
        app:tbTextColor="@color/theme_text_color"
        />
    <TextView
        android:padding="15dp"
        android:id="@+id/login_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="您当前的手机号码是：136 XXXX XXXX"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        android:background="@color/text_color_white">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="3"
            android:text="新手机号"/>
        <EditText
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="0dp"
            android:background="@null"
            android:hint="请填写手机号"
            android:textSize="12sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:background="@color/text_color_white">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="3"
            android:text="短信验证码"/>
        <EditText
            android:id="@+id/login_ver"
            android:layout_width="0dp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_weight="5"
            android:gravity="left"
            android:hint="请填写手机号"
            android:textSize="12sp"
            android:background="@null"
            />
        <TextView
            android:id="@+id/login_get_ver"
            android:layout_centerVertical="true"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="获取验证码"
            android:textSize="12sp"
            android:layout_marginRight="15dp" />
    </LinearLayout>



    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/login_btn_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/login_agree"
        android:background="@color/theme_title_bg"
        android:textColor="@color/theme_text_color"
        android:text="确认修改"/>
</LinearLayout>
